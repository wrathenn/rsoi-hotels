<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/error_text"
        android:visibility="gone"
        android:text="Для просмотра требуется авторизация" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/loyalty_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="status_description,status,discount_description,discount,reservation_count_description,reservation_count"
        android:visibility="gone" />

    <TextView
        android:id="@+id/loyalty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/on_primary_text"
        android:layout_gravity="top"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Лояльность"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_rectangle" />

    <TextView
        android:id="@+id/status_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус: "
        android:textSize="22sp"
        android:textColor="@color/on_surface_text"
        android:layout_gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/status"
        app:layout_constraintBottom_toTopOf="@id/discount_description"
        app:layout_constraintTop_toBottomOf="@id/loyalty"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOLD"
        android:textSize="22sp"
        android:textColor="@color/on_surface_text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/status_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/discount"
        app:layout_constraintTop_toBottomOf="@id/loyalty"/>

    <TextView
        android:id="@+id/discount_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Скидка: "
        android:textSize="22sp"
        android:textColor="@color/on_surface_text"
        android:layout_gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/discount"
        app:layout_constraintBottom_toTopOf="@id/reservation_count"
        app:layout_constraintTop_toBottomOf="@id/status"/>

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99%"
        android:textSize="22sp"
        android:textColor="@color/on_surface_text"
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintStart_toEndOf="@id/discount_description"
        app:layout_constraintBottom_toTopOf="@id/reservation_count_description"
        app:layout_constraintTop_toBottomOf="@id/status_description"/>
    
    <TextView
        android:id="@+id/reservation_count_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество\nбронирований:"
        android:maxLines="2"
        android:textSize="22sp"
        android:textColor="@color/on_surface_text"
        android:layout_gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reservation_count"
        app:layout_constraintTop_toBottomOf="@id/discount"
        app:layout_constraintBottom_toTopOf="@id/hotels_nav_button"/>

    <TextView
        android:id="@+id/reservation_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="101010101"
        android:textSize="22sp"
        android:textColor="@color/on_surface_text"
        android:layout_gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintStart_toEndOf="@id/reservation_count_description"
        app:layout_constraintTop_toBottomOf="@id/discount_description"
        app:layout_constraintBottom_toTopOf="@id/hotels_nav_button"/>
    
    <include layout="@layout/nav_bar_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>
