    <TextView
        android:id="@+id/address_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/address_value"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:foregroundGravity="bottom|left"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="4dp"
        android:textColor="@color/on_surface_text"
        android:text="Адрес:"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/address_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/address_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:foregroundGravity="right"
        android:layout_marginTop="10dp"
        android:textColor="@color/on_surface_text"
        android:textSize="18sp"
        android:layout_gravity="end"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="0.8"
        android:maxLines="5"
        tools:text="Россия, Москва, 2-я Бауманская улица, 5с1" />


    <TextView
        android:id="@+id/price_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/price_value"
        app:layout_constraintTop_toBottomOf="@id/address_value"
        android:foregroundGravity="bottom|left"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="4dp"
        android:textColor="@color/on_surface_text"
        android:text="Цена:"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/price_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/price_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_value"
        android:foregroundGravity="right"
        android:layout_marginTop="10dp"
        android:textColor="@color/on_surface_text"
        android:textSize="18sp"
        android:layout_gravity="end"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="0.8"
        android:maxLines="1"
        tools:text="3000 р/сут" />

    <TextView
        android:id="@+id/stars_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/stars_value"
        app:layout_constraintTop_toBottomOf="@id/price_value"
        android:foregroundGravity="bottom|left"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="4dp"
        android:textColor="@color/on_surface_text"
        android:text="Рейтинг:"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/stars_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/stars_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_value"
        android:foregroundGravity="right"
        android:layout_marginTop="10dp"
        android:textColor="@color/on_surface_text"
        android:textSize="18sp"
        android:layout_gravity="end"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="0.8"
        android:maxLines="1"
        tools:text="5 звезд" />


    <TextView
        android:id="@+id/start_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/start_date_value"
        app:layout_constraintTop_toBottomOf="@id/stars_value"
        app:layout_constraintBottom_toBottomOf="@id/start_date_value"
        android:foregroundGravity="bottom|left"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="4dp"
        android:textColor="@color/on_surface_text"
        android:text="Заезд:"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/start_date_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/start_date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stars_value"
        android:foregroundGravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:padding="8dp"
        android:textColor="@color/on_surface_text"
        android:textSize="18sp"
        android:text="mm/dd/yyyy"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="end"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintHorizontal_bias="0.1"
        android:maxLines="1" />



    <TextView
        android:id="@+id/end_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/end_date_value"
        app:layout_constraintTop_toBottomOf="@id/start_date_value"
        app:layout_constraintBottom_toBottomOf="@id/end_date_value"
        android:foregroundGravity="bottom|left"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="4dp"
        android:textColor="@color/on_surface_text"
        android:text="Выезд:"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/end_date_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/end_date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_date_value"
        android:foregroundGravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:padding="8dp"
        android:textColor="@color/on_surface_text"
        android:textSize="18sp"
        android:text="mm/dd/yyyy"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="end"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintHorizontal_bias="0.1"
        android:maxLines="1" />


